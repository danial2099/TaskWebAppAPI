@page "/Tasks"
@using HomeWebApp.Models

<h1 class="text-right mb-3">List of Tasks Handled</h1>
<a class="btn btn-primary mb-3" href="/Tasks/CreateTask">Want to create new task to record?</a>

@if (tasks == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <style>
        .TaskTable {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 18px;
            text-align: left;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .TaskTable thead tr {
                background-color: #009879;
                color: #ffffff;
                text-align: left;
                font-weight: bold;
            }

            .TaskTable th, .TaskTable td {
                padding: 12px 15px;
                border: 1px solid #dddddd;
            }

            .TaskTable tbody tr {
                border-bottom: 1px solid #dddddd;
            }

                .TaskTable tbody tr:nth-of-type(even) {
                    background-color: #f3f3f3;
                }

                .TaskTable tbody tr:last-of-type {
                    border-bottom: 2px solid #009879;
                }

                .TaskTable tbody tr:hover {
                    background-color: #f1f1f1;
                }

        .btn {
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            margin-right: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }
    </style>

    <table class="TaskTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>TaskName</th>
                <th>TaskDescription</th>
                <th>CustomerName</th>
                <th>ManDays</th>
                <th>StartDate</th>
                <th>AddDays</th>
                <th>Expectdate</th>
                <th>PICEmail</th>
                <th>Status</th>
                <th>CompletionDate</th>
                <th>Remarks</th>
                <th>LastDateComs</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in tasks)
            {
                <tr>
                    <td>@task.Id</td>
                    <td>@task.TaskName</td>
                    <td>@task.TaskDescription</td>
                    <td>@task.CustomerName</td>
                    <td>@task.ManDays</td>
                    <td>@task.StartDate</td>
                    <td>@task.AddDays</td>
                    <td>@task.Expectdate</td>
                    <td>@task.PICEmail</td>
                    <td>@task.Status</td>
                    <td>@task.CompletionDate</td>
                    <td>@task.Remarks</td>
                    <td>@task.LastDateComs</td>
                    <td style="white-space:nowrap">
                        <a class="btn btn-primary" href="/Tasks/EditTasks/@task.Id">Edit</a>
                        <a class="btn btn-danger" href="/Tasks/DeleteTask/@task.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@inject HttpClient Http
@code {
    private List<Models.TasksModel>? tasks;

    protected override async Task OnInitializedAsync()
    {
        tasks = await Http.GetFromJsonAsync<List<Models.TasksModel>>("https://localhost:4000/api/tasks");
    }
}
