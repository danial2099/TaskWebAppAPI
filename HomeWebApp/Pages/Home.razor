@page "/"
@using HomeWebApp.Models
@using System.Text.Json

<PageTitle>Home Page</PageTitle>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Welcome to Task Management Home Web</h1>
        <p class="lead">Manage your tasks efficiently and effectively.</p>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Already have an account?</h5>
                    <p class="card-text">Click the button below to log in.</p>
                    <a class="btn btn-primary btn-lg" href="/Users/Login">Login</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">New here?</h5>
                    <p class="card-text">Create a new account to get started.</p>
                    <a class="btn btn-success btn-lg" href="/Users/CreateUser">Create User</a>
                </div>
            </div>
        </div>
    </div>
</div>


